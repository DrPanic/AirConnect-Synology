#!/bin/sh

set -euo pipefail

AIRCONNECT_DIR="/var/packages/AirConnect/target"

start_airconnect ()
{
    LOGFILE=/tmp/airupnp.log
    touch ${LOGFILE}
    chown airconnect:users ${LOGFILE}

    set +e
    IP=$(/sbin/ifconfig lbr0 | grep 'inet addr:' | cut -d: -f2 | awk '{ print $1}')
    if [ -z "$IP" ]; then
        IP=$(/sbin/ifconfig eth0 | grep 'inet addr:' | cut -d: -f2 | awk '{ print $1}')
    fi

    if [ -z "$IP" ]; then
        echo "Failed to get IP address from lbr0/eth0 interfaces" > ${SYNOPKG_TEMP_LOGFILE}
        exit 1
    fi
    set -e

    PORT=49154

    su airconnect -s /bin/sh -c "${AIRCONNECT_DIR}/airupnp -b ${IP}:${PORT} -z -l 1000:2000 -f ${LOGFILE} -d all=error" >> ${LOGFILE} 2>&1
}

stop_airconnect ()
{
    killall -15 airupnp
}

airconnect_status ()
{
    if [ ! ps | grep airupnp | grep -v -q grep ]
    then
        return 1
    else
        return 0
    fi
}

case $1 in
    start)
        echo Starting AirConnect ...
        start_airconnect
        exit $?
        ;;
    stop)
        echo Stopping AirConnect ...
        stop_airconnect
        exit $?
        ;;
    status)
        if airconnect_status
        then
            echo AirConnect is running
            exit 0
        else
            echo AirConnect is not running
            exit 1
        fi
        ;;
    log)
        echo "/tmp/airupnp.log"
        exit 0
        ;;
    *)
        exit 1
        ;;
esac
